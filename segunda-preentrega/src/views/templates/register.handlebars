<div class="container d-flex justify-content-center align-item-center vh-120">
    <div class="card p-4 shadow-sm cardSession">
        <h2 class="text-center">Register</h2>
        <form action="/api/sessions/register" id="registerForm" method="post">
            <div class="mb-3">
                <label class="form-label" for="first_name">First Name</label>
                <input type="text" class="form-control" name="first_name">
            </div>
            <div class="mb-3">
                <label class="form-label" for="last_name">Last Name</label>
                <input type="text" class="form-control" name="last_name">
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
                <label class="form-label" for="age">Age</label>
                <input type="number" class="form-control" name="age">
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn-primary w-100">
                Registrarme
            </button>
        </form>
        <div class="text-center mt-3">
            <a href="/api/sessions/viewlogin">Â¿ya estas registrado? Inicie sesion</a>
